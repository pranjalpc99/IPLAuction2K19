<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">


    <android.support.v7.widget.CardView
        android:id="@+id/opponents_card_main"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardimg"
                android:src="@drawable/ipl_logo"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_toRightOf="@id/cardimg"
                android:id="@+id/info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Team Name"
                    android:id="@+id/cardname"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Points"
                    android:lines="1"
                    android:id="@+id/carddescript"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Balance"
                    android:lines="1"
                    android:id="@+id/cardprice"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/opponents_card_playerlist"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/white"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_width="match_parent">

        <ListView
            android:id="@+id/opponents_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_username"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:divider="@null"
            android:dividerHeight="0dp"/>

    </android.support.v7.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Bar"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_vp_item_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Page"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>


</LinearLayout>
