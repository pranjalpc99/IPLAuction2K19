<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tachyon.techlabs.iplauction">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".IntroActivity" />
        <activity android:name=".AfterRegistrationMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WaitingForPlayersActivity" />
        <activity android:name=".qr_code_generator" />
        <activity android:name=".qr_scanner" />
        <activity android:name=".qrcode_scanner" />
        <activity
            android:name=".PowerCards"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_power_cards"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".About" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".opponents_data" />
        <activity android:name=".Room" />
        <activity android:name=".activity_vertical_ntb" />
        <activity android:name=".PLAYERS" />
        <activity android:name=".PaymentInfo" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Start_Game" />
        <activity android:name=".OngoingPlayer" />
        <activity android:name=".AdminOngoingPlayer">

        </activity>
    </application>

</manifest>